{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./public/js",
    "rootDir": "./public/ts",
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "DOM",
      "ES2020",
      "DOM.Iterable"
    ]
  },
  "include": [
    "./public/ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
